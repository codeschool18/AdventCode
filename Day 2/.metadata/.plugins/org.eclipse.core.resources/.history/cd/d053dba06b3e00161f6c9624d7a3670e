import java.util.Scanner;
import java.util.ArrayList;
import java.io.File;
import java.io.IOException;
public class presents extends easier{
	
	public static String locations = "";
	public static ArrayList<String> place = new ArrayList<String>();
	public static int currentNS = 0;
	public static int currentES = 0;
	public static int currentNR = 0;
	public static int currentER = 0;
	public static int numHouses = 0;
	public static int visitedMoreThanOnce = 0;
	
	public static void main(String[] args) {
		Load(new File("C:\\directions.txt"));
	}
	public static void Load(File path){
		//String filePath = path;
		File file = path;
		try{
			Scanner in = new Scanner(file);
			while(in.hasNext()){
				locations += in.next();
			}
			if(in != null){
				in.close();
			}
		}
		catch(IOException e){
			print(e);
		}
		PrintFile();
	}
	public static void PrintFile(){
		for(int i = 0; i < locations.length(); i++){
			if(locations.charAt(i) == '^'){
				currentN++;
			}
			else if(locations.charAt(i) == '>'){
				currentE++;
			}
			else if(locations.charAt(i) == '<'){
				currentE--;
			}
			else{
				currentN--;
			}
			
			String currentLoc = new String(currentN + "," + currentE);
			
			if(!place.contains(currentLoc)){
				numHouses++;
			}
			else{
				visitedMoreThanOnce++;
			}
			
			place.add(currentLoc);
		}
		println(numHouses);
		println(visitedMoreThanOnce);
	}

}
